#!/bin/bash

if [ $# -lt 1 ]; then
  echo "usage: unpack archive"
  exit 0
fi

if [ ! -e $1 ]; then
  echo "file not exists: " $1
  exit 1
fi

echo Unpacking $1...
arctype=${1##*.}
case $arctype in 
  gz )
  tar xzvf $1 ;;
  bz2 )
  tar xjvf $1 ;;
  7z )
  7za x $1 ;;
  rar )
  unrar x $1 ;;
  zip )
  unzip $1 ;;
  * )
  echo unknown archive type $arctype
  exit 1 ;;
esac
